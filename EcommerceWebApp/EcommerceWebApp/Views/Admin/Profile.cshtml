@{
}
<div class="col-md-12">
    <div class="card card-statistics">
        <div class="card-header">
            <div class="card-heading">
                <h4 class="card-title">Form Row</h4>
            </div>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="admin_id" />

                <div class="form-group">
                    <label for="inputAddress">Name</label>
                    <input asp-for="admin_name" class="form-control" id="inputAddress" >
                </div>
                <div class="form-group">
                    <label for="inputAddress">Email</label>
                    <input asp-for="admin_email" class="form-control" id="inputAddress">
                </div>
                <div class="form-group">
                    <label for="inputAddress">Password</label>
                    <input asp-for="admin_password" class="form-control" id="inputAddress">
                </div>
                <div class="form-group">
                    <label for="inputAddress">Image</label>
                    <input asp-for="admin_image" class="form-control" id="inputAddress">
                </div>

                <img src="~/images/admin/@ViewBag.admin_image" width="200" height="200"/> <br />

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>